@model Ejercicio1.Models.InvertirNumero
@{
    ViewData["Title"] = "Index";
}

<html>
<head></head>
<body>
    <div class="row">
        @using (Html.BeginForm("Index", "InvNumero", FormMethod.Post))
        {
            <h1>Inversion de un numero de dos digitos</h1>

            <div class="form-group">
                <label for="Num">Numero:</label>
                <input type="number" id="Num" class="form-control" name="Num" min="10" max="99" value="@Model.Num" />
            </div>                      

            <div class="form-group">
                <label for="InvNum">Numero Invertido:</label>
                <input type="text" id="InvNum" class="form-control" name="InvNum" value="@Model.InvNum" readonly/>
            </div>
        
            <button type="submit" class="btn btn-info" id="inv" value="inv" name="inversion">Invertir</button>
        }
    </div>
</body>
</html>

